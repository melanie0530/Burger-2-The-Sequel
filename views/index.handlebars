<h1>Eat Da Burger</h1>

<div class="container">
  <ul id="dev">
    <h2> Not Devoured</h2>
    {{#each Burgers}}
      {{#unless devoured}}
    <li>
      {{burger_name}}
      <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
        Devour
      </button>
    </li>
      {{/unless}}
    {{/each}}
  </ul>
  <ul>
    <h2>Devoured</h2>
    {{#each Burgers}}
      {{#if devoured}}
    <li>
      {{burger_name}}
    </li>
      {{/if}}
      {{/each}}
  </ul>

</div>
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    {{!-- <label for="burger">Burger Name:</label> --}}
    <input type="text" id="burgerInput" name="name">
  </div>
  <button id="submitBtn" type="submit">Add Burger</button>
</form>